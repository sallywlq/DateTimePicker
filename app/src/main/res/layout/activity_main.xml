<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wlq.datetimepicker.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看日历"
        android:id="@+id/date_bt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看列表"
        android:id="@+id/grid_bt"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/date_bt"
        android:layout_toEndOf="@+id/date_bt"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下拉列表"
        android:layout_marginLeft="10dp"
        android:id="@+id/spinner_bt"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/grid_bt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进度条"
        android:id="@+id/progress_bt"
        android:layout_below="@+id/date_bt"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="webview"
        android:id="@+id/webview_bt"
        android:layout_alignTop="@+id/progress_bt"
        android:layout_alignStart="@+id/grid_bt" />
</RelativeLayout>
